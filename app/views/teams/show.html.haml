.message_sidebar
  = render 'teams/team_sidebar', team: @team
  .message_sidebar__channel_container
    .message_sidebar__channel_container__channels
      = link_to "CHANNELS(#{@team.channels.count})", team_channels_path(@team.id), class: "message_links"
    .message_new
      = link_to "new", new_team_channel_path(@team.id),class: "message_links"
    %ul.message_channel__list
      - @channels.each do |channel|
        %li.message_channel__list__item
          = link_to "# #{channel.name}", team_channel_messages_path(params[:id], channel.id), class: "message_links"

  .message_sidebar__direct_container
    .message_sidebar__direct_container__directs
      = link_to "DIRECT_MESSAGES(#{@user.directs.count})", team_directs_path(@team.id), class: "message_links"
    .message_new
      = link_to "new", new_team_direct_path(@team.id),class: "message_links"
    %ul.message_channel__list
      - @directs.each do |direct|
        %li.message_channel__list__item
          = link_to "# #{direct_links}", team_direct_messages_path(params[:id], direct.id), class: "message_links"
