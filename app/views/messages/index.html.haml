.message_sidebar
  = render 'teams/team_sidebar', team: @team
  = render 'channels/channel_sidebar', collection: @channels
  .message_sidebar__direct_container
    .message_sidebar__direct_container__directs
      = link_to "DIRECT_MESSAGES", "/", class: "message_links"
    .message_new
      = link_to "new", new_team_channel_path(@team.id),class: "message_links"
    .message_puls_icon

.message_main
  .message_main__header
    .message_main__header__title
      %p ##{@channel.name}
    .message_main__header__members
      .message_main__header__members__member_list
        -# 仮の表示。改良版ではプルダウンから選択できるようにする。
        member-list:
        - @channel.users.each do |user|
          = user.user_name
      .message_main__header__members__member_edit
        = link_to "EDIT", edit_team_channel_path(params[:team_id], @channel.id), class: "message_links"
      .message_main__header__members__member_delete
        = link_to "DELETE", team_channel_path(params[:team_id], @channel.id), method: :delete, class: "message_links"

  .message_main__body
  
  .message_main__footer
    %textarea{placeholder: "memo", class: "message_main__footer__input_message"}



