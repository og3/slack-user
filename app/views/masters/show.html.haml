.master_menu__header
  .team_header
    .team_header__logo
  .master_menu__header__right
    %ul.master_menu__header__right__list
      %li.master_menu__header__right__list__item
        = link_to "ログアウト", destroy_master_session_path, method: :delete
      %li.master_menu__header__right__list__item
        = link_to "チーム作成", new_team_path

.master_menu__main
  .master_menu__main__container
    %p ログイン中のマスターアカウント
    = current_master.email
    .master_menu__main__container__inner
      %ul.master_menu__main__container__inner__list
        %h2 所属team一覧
        - current_master.teams.each do |team|
          %li.master_menu__main__container__inner__list__item
            %p.master_menu__main__container__inner__list__name
              = link_to team.name, team_path(team.id)

      %ul.master_menu__main__container__inner__list
        %h2 全team一覧
        - @teams.each do |team|
          %li.master_menu__main__container__inner__list__item
            %p.master_menu__main__container__inner__list__name
              = link_to team.name, new_team_user_path(team.id)
